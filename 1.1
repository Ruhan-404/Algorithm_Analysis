//Insertion sort

#include <stdio.h>
void insertionSort(int &arr[],int n){  // arr = 13,5,6
    for(int i=1;i<n;i++){             // i = 5
        int key=arr[i],j=i-1;         // set key = 5 j = 0
        while(j>=0 && arr[j]>key){    // now iterate from 5 to 13 backward
            arr[j+1]=arr[j];          // arr = 13,13,6
            j--;                      // j=-1
        }
        arr[j+1]=key;                 // arr = 5,13,6
    }
}
int main(){
    int arr[]={13,5,6};
    int n=arr.size() // taking size of the array.
    insertionSort(arr,n); // sorting the array...
    for(atuo i : arr)cout<<i<<" "; // show the sorted array..
    cout<<endl;
    return 0;
}
